CREATE TABLE ARTICULOS
(ARTICULO VARCHAR2(20) NOT NULL,
COD_FABRICANTE NUMBER(3) NOT NULL,
PESO NUMBER (3) NOT NULL CONSTRAINT C_PESO_ARTICULOS CHECK (PESO >0),
CATEGORIA VARCHAR2(10) NOT NULL CONSTRAINT C_CATEGORIA_ARTICULOS CHECK (CATEGORIA IN ('PRIMERA','SEGUNDA','TERCERA')),
PRECIO_VENTA NUMBER(4)CONSTRAINT C_PVENTA_ARTICULOS CHECK (PRECIO_VENTA >0),
PRECIO_COSTO NUMBER(4) CONSTRAINT C_PCOSTO_ARTICULOS CHECK (PRECIO_COSTO >0),
EXISTENCIAS NUMBER (5) ,
CONSTRAINT PK_ARTICULOS PRIMARY KEY (ARTICULO,COD_FABRICANTE,PESO,CATEGORIA) 
); --HAY QUE CREAR LA TABLA FABRICANTES PARA PODER HACER LA FOREIGN KEY DE COD_FABRICANTE
INSERT INTO ARTICULOS VALUES ( 'COCHE', 121, 10, 'PRIMERA', 2, 3, 14);

CREATE TABLE TIENDAS
(NIF VARCHAR2(10) NOT NULL ,
NOMBRE VARCHAR2(20),
DIRECCION VARCHAR2(20),
POBLACION VARCHAR2(20) CONSTRAINT C_POBLACION_TIENDAS CHECK (UPPER (POBLACION)  LIKE POBLACION),
PROVINCIA VARCHAR2(20),
COD_POSTAL NUMBER(5) ,
CONSTRAINT PK_TIENDAS PRIMARY KEY (NIF));

INSERT INTO TIENDAS VALUES ('1212A', 'JAV','C\MADRID','jasa', '

CREATE TABLE FABRICANTES 
(COD_FABRICANTE NUMBER(3) CONSTRAINT PK_FABRICANTES PRIMARY KEY,
NOMBRE VARCHAR2(15) CONSTRAINT C_NOMBRE_FABRICANTES CHECK (UPPER (NOMBRE) LIKE NOMBRE),
PAIS VARCHAR2(15) CONSTRAINT C_PAIS_FABRICANTES CHECK ( PAIS = '[A-Z]')
);
DROP TABLE FABRICANTES;
